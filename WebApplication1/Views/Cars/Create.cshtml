@model CarViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create Car</h1>
<form asp-action="Create" asp-controller="Cars" method="post">
    <br />
    <label asp-for="Brand"></label>
    <input asp-for="Brand" />
    <span asp-validation-for="Brand"></span>
    <br />
    <label asp-for="ModelName"></label>
    <input asp-for="ModelName" />
    <span asp-validation-for="ModelName"></span>

    <input type="submit" value="Add Car" />

</form>

